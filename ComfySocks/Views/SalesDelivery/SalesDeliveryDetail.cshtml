<div class="row">
    <div class="col-md-10">
        @if (User.IsInRole("Super Admin") || User.IsInRole("Admin") || User.IsInRole("Production"))
        {
            <a href="~/RowMaterialDelivery/NewRowMaterialDelivery?id=@Model.ID" class="btn btn-add">New <span class="glyphicon glyphicon-plus"></span></a>
        }
        <a href="#" class="btn btn-add" onclick="Print()">Print <span class="glyphicon glyphicon-print"></span></a>
        <a href="~/RowMaterialDelivery/RowMaterialDeliveryList?id=@Model.ID" class="btn btn-add">Back To List <span class="glyphicon glyphicon-circle-arrow-left"></span></a>

    </div>
    <div class="col-md-2">
        @if (User.IsInRole("Super Admin") || User.IsInRole("Admin"))
        {
            if (Model.Status == "Submmited")
            {
                <div class="row">
                    <div class="col-md-6">
                        <a href="~/RowMaterialDelivery/DeliveryApproved?id=@Model.ID">Accept <span class="glyphicon glyphicon-check"></span></a>
                    </div>
                    <div class="col-md-6" style="float:right">
                        <a href="~/RowMaterialDelivery/DeliveryRejected?id=@Model.ID">Reject <span class="glyphicon glyphicon-remove-circle"></span></a>
                    </div>
                </div>

            }

        }
    </div>
</div>
<div class="box box-primary" id="printable">
    <div style="margin:40px">
        <div>
            <img src='~/Images/logo1.png' class="col-sm-12 " id="logo-img" style="margin-bottom:30px;margin-left:-10px;margin-right:0px;height:130px" />
        </div>
        <div class="row">
            <div class="col-md-8">
                <h3 style="align-content:center;text-decoration:underline">Store Issue Voucher</h3>
            </div>
            <div class="col-md-4" style="float:right">
                Date: @Html.DisplayFor(modelItem => Model.Date)<br />
                De-No: @Html.DisplayFor(modelItem => Model.DeliveryNumber)
            </div>
        </div>

        <table class="table">
            <tr>
                <td>
                    Section/Department:@Html.DisplayFor(modelItem => Model.From)
                </td>
            </tr>
            <tr>
                <td>
                    Requestion No: @Html.DisplayFor(modelItem => Model.StoreRequestInfoID)
                </td>
            </tr>
        </table>
        <table class="table well table-bordered">
            <thead>
                <tr>
                    <td>Item Description</td>
                    <td>Item Code</td>
                    <td>Unit</td>
                    <td>Quantity</td>
                    <td>Remark</td>
                </tr>
            </thead>
            @foreach (ComfySocks.Models.DeliveryInfo.Delivery d in Model.Deliveries)
            {
                <tr>
                    <td>
                        @d.StoreRequest.Item.Name @d.StoreRequest.Item.ItemType.Name
                    </td>
                    <td>@d.StoreRequest.Item.Code</td>
                    <td>@d.StoreRequest.Item.Unit.Name</td>
                    <td>
                        @d.Quantity
                    </td>
                    <td>
                        @d.StoreRequest.Remark
                    </td>
                </tr>
            }
        </table>
        <div id="footer">
            <div class="row" style="margin-top:10%">
                <div class="col-md-4" style="float:left">
                    Issued by :@Html.DisplayFor(modelItem => Model.ApplicationUser.UserName)
                </div>
                <div class="col-md-4" style="float:right">
                    Approved by :@Html.DisplayFor(modelItem => Model.Approvedby)
                </div>
                <div class="col-md-4" style="float:right">
                    Recivied by :@Html.DisplayFor(modelItem => Model.Receivedby)
                </div>
            </div>
            <br />

            <div class="col-sm-12 alert-danger" style="background-color:red;"></div>
        </div>
    </div>

</div>

<script>

    function Print() {
        var height = document.getElementById("printable").clientHeight;
        var pages = 1000 - (height % 950);
        document.getElementById("footer").style.marginTop = pages + "px";
        //document.getElementById("logo-img").style.width = 100 + "vw";
        print2()
    }
    function print2() {
        var utc = new Date().toJSON().slice(0, 10).replace(/-/g, '/');
        var headstr = "<html><head><style>.hiddenForPrint{visibility: hidden;printvisible:visible;}a:link:after, a:visited:after {display: none;content: '';}.divFooter {position: fixed;bottom: 0;}td{background-color:aquamarine}</style ><html></head><body>";

        var footstr = "</body><html>";

        var newstr = document.getElementById('printable').innerHTML;
        var oldstr = document.body.innerHTML;
        document.body.innerHTML = headstr + newstr + footstr;
        window.print();
        document.body.innerHTML = oldstr;
        document.getElementById("footer").style.marginTop = 0 + "px";
        return false;
    }


</script>

