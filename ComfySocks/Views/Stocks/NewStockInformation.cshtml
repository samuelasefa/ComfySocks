@model ComfySocks.Models.InventoryModel.StockReferance

@{
    ViewBag.title = null;

}

<div class="box box-body box-info">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Stock  Information</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control datepicker", autocomplete = "off" } })
                <br />
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <p class="control-label col-md-4">Supplier</p>
            <div class="col-md-8">
                @Html.DropDownList("SupplierID", null, htmlAttributes: new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(model => model.SupplierID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <p class="control-label col-md-4">Supplier Invoice</p>
            <div class="col-md-8">
                @Html.DropDownList("InvoiceID", null, htmlAttributes: new { @class = "form-control" })
                <br />
                @Html.ValidationMessageFor(model => model.InvoiceID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Reciviedby, htmlAttributes: new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.EditorFor(model => model.Reciviedby, new { htmlAttributes = new { @class = "form-control" } })
                <br />
                @Html.ValidationMessageFor(model => model.Reciviedby, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-8">
                <input type="submit" value="Add Stock" class="btn btn-primary" />
            </div>
        </div>
        <hr />
        <div>
            @Html.ActionLink("Back to List", "StockList")
        </div>
    </div>

    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@if (ViewBag.errorMessage != null)
{
    <script>
                window.onload = function () {
                    sweetAlert("error", "@ViewBag.errorMessage");
                }
    </script>

}
@if (ViewBag.succsessMessage != null)
{
    <script>
                window.onload = function () {
                    sweetAlert("success","@ViewBag.succsessMessage");
                }
    </script>
}

    <script>
        //datepicker
        $(function () {
            $(".datepicker").datepicker({
                format: 'mm-dd-yyyy'
            });
        });
    </script>