@model IEnumerable<ComfySocks.Models.Request.StoreRequestInformation>

@{
    ViewBag.Title = "Store Requestion List";
}

<div class="box box-body box-primary">
    <p>
        @Html.ActionLink("Create New", "NewRequestEntry")
    </p>
    <table class="table table-bordered table-striped" id="dtaTable">
        <thead>
            <tr>
                <th>Date</th>
                <th>SR-No</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Date</th>
                <th>SR-No</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </tfoot>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                <td>@Html.DisplayFor(modelItem => item.StoreRequestNumber)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>
                    @Html.ActionLink("View ", "StoreRequestDetial", new { id = item.ID }, new { @class = "btn btn-sm btn-info glyphicon glyphicon-eye-open" })

                    @if (item.Status == "Approved")
                    {
                        @Html.ActionLink("Delivery", "NewRowMaterialDelivery","RowMaterialDelivery", new { id = item.ID }, new { @class = "btn btn-sm btn-info glyphicon glyphicon-truck" })
                    }
                </td>
            </tr>
        }
    </table>
</div>

<script>
    $(document).ready(function () {
        $("#dtaTable").DataTable({})
    })
</script>