@model ComfySocks.Models.DeliveryInfo.Delivery
@{
    ViewBag.Title = "New Product Material Delivery Entry";
}

<div class="box box-body box-warning">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-12">
                            @using (Html.BeginForm())
                            {

