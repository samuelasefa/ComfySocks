@model IEnumerable<ComfySocks.Models.InventoryModel.Store>

@{
    ViewBag.Title = null;
}

<div class="box box-body box-info" style="border-radius:10px">
    <h4 style="text-align:center; font-family:'Maiandra GD'">Store Name</h4>
    @if (User.IsInRole("Super Admin"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }
    @if (@Model.Count() == 0)
    {
        <div class="jumbotron" style="border-radius:10px">
            <p style="text-align:center; color:red">Please Insert Store Information!!!</p>
        </div>
    }
    else
    {
        <table class="table">
            <thead style="background-color:#00CCD2;color:white">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Location)
                    </th>
                    @if (User.IsInRole("Super Admin"))
                    {
                        <th>Action</th>
                    }
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>

                    @if (User.IsInRole("Super Admin"))
                    {
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    }

                </tr>
            }

        </table>

    }

</div>
<script src="~/Scripts/sweetalert.js"></script>
<script src="~/Scripts/sweetalert.min.js"></script>
<link href="~/Scripts/sweetalert.css" rel="stylesheet" />

@if (ViewBag.errorMessage != null)
{
    <script>
                window.onload = function () {
                    sweetAlert("Opps...", "@ViewBag.errorMessage", "error");
                    return false;
                }
    </script>

}
@if (ViewBag.succsessMessage != null)
{
    <script>
                window.onload = function () {
                    sweetAlert("Congratulation", "@ViewBag.succsessMessage", "success");
                    return false;
                }
    </script>
}

@if (ViewBag.infoMessage != null)
{
    <script>
        window.onload = function () {
                sweetAlert("Success", "@ViewBag.infoMessage", "info");
                return false;
        }
    </script>
}