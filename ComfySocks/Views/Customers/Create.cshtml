@model ComfySocks.Models.Order.Customer

@{
    ViewBag.Title = null;
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="box box-body box-info" style="border-radius:10px">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4 style="text-align:center;font-family:'Maiandra GD'">Create New Customer</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-6">
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", @placeholder = "First Name" } })
                        @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TinNumber, new { htmlAttributes = new { @class = "form-control", @placeholder = "TIN Number", maxlength = "10" } })
                        @Html.ValidationMessageFor(model => model.TinNumber, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "form-control", @placeholder = "City" } })
                        @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.SubCity, new { htmlAttributes = new { @class = "form-control", @placeholder = "Sub City" } })
                        @Html.ValidationMessageFor(model => model.SubCity, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.woreda, new { htmlAttributes = new { @class = "form-control", @placeholder = "Woreda" } })
                        @Html.ValidationMessageFor(model => model.woreda, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.HouseNo, new { htmlAttributes = new { @class = "form-control", @placeholder = "HouseNo" } })
                        @Html.ValidationMessageFor(model => model.HouseNo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.No, new { htmlAttributes = new { @class = "form-control", @placeholder = "Invoice Number" } })
                        @Html.ValidationMessageFor(model => model.No, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Create" class="btn btn-block btn-info" />
                    </div>
                </div>
            </div>
        </div>
    }

    <div>
        <i class="fa fa-backward"></i>
        @Html.ActionLink("Back to List", "Index")
    </div>
    <hr />
</div>
