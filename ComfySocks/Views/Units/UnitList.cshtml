@model IEnumerable<ComfySocks.Models.Items.Unit>

@{
    ViewBag.Title = "Unit List";
}

<div class="box box-info box-body">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <thead>
                <tr style="background-color:#00CCD2; color:white">
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    @if (User.IsInRole("Admin") || User.IsInRole("Super Admin"))
                    {
                        <th>Action</th>
                    }
                </tr>
            </thead>
            @if (Model.Count() == 0)
            {
                <div class="jumbotron">
                    <p style="text-align:center;color:red">Please Insert Unit Information First!!</p>
                </div>
            }
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Super Admin"))
                    {
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                        </td>
                    }
                </tr>
            }

        </table>

</div>